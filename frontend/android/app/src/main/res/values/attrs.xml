<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontType" format="enum">
        <enum name="light" value="0" />
        <enum name="regular" value="1" />
        <enum name="medium" value="2" />
        <enum name="bold" value="3" />
    </attr>

    <declare-styleable name="SimpleTextView">
        <attr name="fontType" />
    </declare-styleable>

    <declare-styleable name="SimpleEditText">
        <attr name="fontType" />
    </declare-styleable>

    <declare-styleable name="SimpleButton">
        <attr name="fontType" />
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="cornerRadius" format="dimension" />
        <attr name="colorInner" format="color" />
        <attr name="colorShadow" format="color" />
        <attr name="shadowSpread" format="dimension" />
        <attr name="shadowDX" format="dimension" />
        <attr name="shadowDY" format="dimension" />
    </declare-styleable>

</resources>