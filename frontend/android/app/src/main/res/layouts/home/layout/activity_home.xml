<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLight"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/timeline"
            layout="@layout/layout_timeline" />

        <com.suhel.photosphere.screens.home.view.LinearMenuBar
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            android:elevation="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_item"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_timeline"
                android:tint="@color/colorMenuUnselected" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_item"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chat"
                android:tint="@color/colorMenuUnselected" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_item"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add"
                android:tint="@color/colorDark" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_item"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_competition"
                android:tint="@color/colorMenuUnselected" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_item"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_profile"
                android:tint="@color/colorMenuUnselected" />


        </com.suhel.photosphere.screens.home.view.LinearMenuBar>

    </android.support.design.widget.CoordinatorLayout>

</layout>