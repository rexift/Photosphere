<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theLightShade"
    android:padding="32dp">

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoTitleCaption"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="title"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fontType="sansAltLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Loading"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/lblDetailInfoTitleCaption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fontType="sansRegular" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoOwnerCaption"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="by"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoTitle"
        app:fontType="sansAltLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoOwner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:maxEms="20"
        android:text="Loading"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/lblDetailInfoOwnerCaption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoTitle"
        app:fontType="sansRegular" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoDateCaption"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="date"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoOwner"
        app:fontType="sansAltLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:maxEms="20"
        android:text="Loading"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/lblDetailInfoDateCaption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoOwner"
        app:fontType="sansRegular" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoLikesCaption"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="likes"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoDate"
        app:fontType="sansAltLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblDetailInfoLikes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:maxEms="20"
        android:text="Loading"
        android:textColor="@color/theDarkShade"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lblDetailInfoLikesCaption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDetailInfoDate"
        app:fontType="sansRegular" />

</android.support.constraint.ConstraintLayout>