<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theLightShade">

    <com.suhel.photosphere.Views.Custom.UITextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Create Competition"
        android:textColor="@color/theDarkShade"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fontType="sansLight" />

    <com.suhel.photosphere.Views.Custom.UIEditText
        android:id="@+id/txtAddCompetitionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:background="@color/theVeryLightGray"
        android:hint="Name"
        android:padding="8dp"
        android:textColor="@color/theDarkShade"
        android:textColorHint="@color/theTranslucentDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fontType="sansLight" />

    <com.suhel.photosphere.Views.Custom.UIEditText
        android:id="@+id/txtAddCompetitionDescription"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/theVeryLightGray"
        android:gravity="top|left"
        android:hint="Description"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:textColor="@color/theDarkShade"
        android:textColorHint="@color/theTranslucentDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddCompetitionName"
        app:fontType="sansLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblAddCompetitionDateStart"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/theVeryLightGray"
        android:gravity="center_vertical"
        android:hint="Date Start"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="vertical"
        android:textColor="@color/theDarkShade"
        android:textColorHint="@color/theTranslucentDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddCompetitionDescription"
        app:fontType="sansLight" />

    <com.suhel.photosphere.Views.Custom.UITextView
        android:id="@+id/lblAddCompetitionDateEnd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/theVeryLightGray"
        android:gravity="center_vertical"
        android:hint="Date End"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="vertical"
        android:textColor="@color/theDarkShade"
        android:textColorHint="@color/theTranslucentDarkShade"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAddCompetitionDateStart"
        app:fontType="sansLight" />

    <com.suhel.photosphere.Views.Custom.UIButton
        android:id="@+id/bAddCompetitionCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Create"
        android:textColor="@color/theGreenShade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAddCompetitionDateEnd"
        app:fontType="sansRegular" />

    <com.suhel.photosphere.Views.Custom.UIButton
        android:id="@+id/bAddCompetitionCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:textColor="@color/theRedShade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bAddCompetitionCreate"
        app:layout_constraintTop_toBottomOf="@+id/lblAddCompetitionDateEnd"
        app:fontType="sansRegular" />


</android.support.constraint.ConstraintLayout>